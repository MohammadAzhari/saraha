          <p class="card-text">
            <textarea
              class="form-control"
              placeholder="الرسالة ......"
              name="msg"
            ></textarea>
            <input type="hidden" value="{{id}}" name="id" />
          </p>
          <button type="submit" class="btn btn-primary"> ارسال</button>
        </form>
      </div>

    </div>

  </div>
</div>